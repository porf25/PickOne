<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.porf.pickone.ChooseOptions"
    android:background="@drawable/blackwood">

    <TextView android:text="@string/options_hint" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/enterItem"
        android:layout_marginTop="42dp"
        android:inputType="text"
        android:hint="Please enter an item here..."
        android:textColor="#000000"
        android:background="#ffffff"
        android:width="380dp"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true"
        android:height="80dp"
        android:imeOptions="actionDone"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Add To List"
        android:id="@+id/buttonAdd"
        android:layout_below="@+id/enterItem"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:background="#ffffff"
        android:onClick="addToList" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="View List"
        android:id="@+id/buttonListView"
        android:layout_below="@+id/buttonAdd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:gravity="center"
        android:id="@+id/textViewWarning"
        android:layout_below="@+id/buttonListView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:textColor="#ffffff"/>

</RelativeLayout>
